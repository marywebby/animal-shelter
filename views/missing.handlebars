<section>
  <h1>Missing Animals</h1>
      {{#each animals as |animal|}}
        {{#if animal.isMissing}}
        <article class="animal">
          <h2>{{animal.name}}</h2>
          <p>{{animal.name}} is a {{animal.breed}}. They are {{animal.age}} years old. They were last seen at {{animal.lastSeen}}</p>
        </article>
        {{/if}}
  {{else}}
    <p>No missing animals found.</p>
      {{/each}}

  {{#if loggedIn}}
    <a href="/postMissing">Report Missing Animal</a>
  {{/if}}
</section>